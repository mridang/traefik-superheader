{
  "$schema": "https://raw.githubusercontent.com/jetpack-io/devbox/0.10.3/.schema/devbox.schema.json",
  "packages": [
    "golangci-lint@latest",
    "go@1.22",
    "tinygo@0.33.0"
  ],
  "shell": {
    "init_hook": [
      "export \"GOROOT=$(go env GOROOT)\"",
      "go mod download"
    ],
    "scripts": {
      "test": "make test",
      "build": "make build",
      "lint": "make lint",
      "format": "make format"
    }
  },
  "env": {
    "GOMODCACHE": "$PWD/.go",
    "GOTOOLCHAIN": "local",
    "GOROOT": ""
  }
}
